CC = gcc
MIPS-CC = /opt/buildroot-gcc342/bin/mipsel-linux-gcc 

JSON_C_DIR=/user/include

FLAGS = -Wall -pthread
FLAGS += -I$(JSON_C_DIR)/include/json-c
LDFLAGS+= -L$(JSON_C_DIR)/lib -ljson-c

SRC = $(wildcard *.c)
OBJ = e2s

$(OBJ): $(SRC)
	$(MIPS-CC)  $(FLAGS) $(LDFLAGS) -o $@ $^

clean:
	rm -rf *~ *.o server e2s SOURCEINSIGHT
	
server:	$(SRC)

	$(CC) $(FLAGS) $(LDFLAGS) -o $@ $(SRC)
